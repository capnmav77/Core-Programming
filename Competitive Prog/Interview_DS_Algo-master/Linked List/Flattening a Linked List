Node *merge(Node* head1, Node* head2) {
    if(!head1)
        return head2;
    if(!head2)
        return head1;
        
    Node* head = new Node(-1);
    Node* temp = head;
    
    while(head1 && head2) {
        if(head1->data < head2->data) {
            temp->bottom = head1;
            head1 = head1->bottom;
        } else {
            temp->bottom = head2;
            head2 = head2->bottom;
        }
        temp = temp->bottom;
    }

    temp->bottom = head1 ? head1 : head2;
    
    return head->bottom;
}

Node *flatten(Node *head) {
    if(!head || !head->next)
        return head;

    Node* temp = flatten(head->next);
    
    return merge(head, temp);
}
